{
	"compilerOptions": {
		"module": "system",
		"noImplicitAny": true,
		"noImplicitReturns": true,
		"noImplicitThis": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"removeComments": true,
		"preserveConstEnums": true,
		"sourceMap": true,
		"pretty": true,
		"outDir": "build/",
		"rootDir": ".",
		"alwaysStrict": true,
		"forceConsistentCasingInFileNames": true
	},
	"exclude": [
		"node_modules",
		"build"	
	]
}
